{
  "arrowParens": "always",
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "printWidth": 120,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "endOfLine": "lf",
  "jsxSingleQuote": true,
  "bracketSameLine": false,
  "overrides": [
    {
      "files": ["*.tsx"],
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "typeGroups": ["interface", "type", "enum", "function"]
      }
    },
    {
      "files": ["*.styles.ts", "*.css", "*.scss"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "bracketSpacing": false
      }
    }
  ]
}
